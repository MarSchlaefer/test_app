<h2 class="text-center mt-4"><%= @user.username %></h2>
<%= gravatar_for @user, size: 200%>

<% if logged_in? && @user == current_user %>
    <div class="text-center mt-4">
        <%= link_to "Edit your profile", edit_user_path(current_user), class: "btn btn-outline-info" %>
        <%= button_to "Delete your profile", user_path(current_user), method: :delete, data: { turbolink: false, confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
    </div>
<% end %>

<h2 class="text-center mt-4">Articles</h2>
<div id="articles">
    <%= render 'articles/article' %>
</div>
